{
  // VS Code launch configurations for full-stack debugging
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js: dev (server)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect",
        "NEXT_TELEMETRY_DISABLED": "1"
      },

      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "restart": true,
      "serverReadyAction": {
        "pattern": "started server on .*http://localhost:(\\d+)",
        "action": "debugWithChrome"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js: dev (server only)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect",
        "NEXT_TELEMETRY_DISABLED": "1"
      },

      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Convex: dev (server)",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["convex", "dev", "--no-open"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect=9230"
      },

      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "restart": true
    },
    {
      "name": "Chrome: attach to Next.js",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Edge: attach to Next.js",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Full-stack: Next + Chrome",
      "configurations": ["Next.js: dev (server)", "Chrome: attach to Next.js"]
    },
    {
      "name": "Full-stack: Next + Edge",
      "configurations": [
        "Next.js: dev (server only)",
        "Edge: attach to Next.js"
      ]
    }
  ]
}
